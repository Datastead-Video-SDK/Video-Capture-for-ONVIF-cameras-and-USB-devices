                <Canvas Name="pnlVUMeterRight" Height="93" Width="145" Canvas.Left="242" Canvas.Top="27"></Canvas>
            </Canvas>
        </GroupBox>
        <GroupBox Margin="17,0,0,31" HorizontalAlignment="Left" VerticalAlignment="Bottom" Height="172.96" Width="382">
