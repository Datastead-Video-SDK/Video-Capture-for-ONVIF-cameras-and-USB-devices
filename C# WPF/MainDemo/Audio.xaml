                <ComboBox Name="cboAudioInputs" Height="24" Width="153" TabIndex="3" Margin="0,29,971,174" HorizontalAlignment="Right" VerticalAlignment="Bottom" SelectionChanged="cboAudioInputs_SelectedIndexChanged" />
